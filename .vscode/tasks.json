{
      "version": "2.0.0",
      "tasks": [
            {
                  "label": "build",
                  "command": "dotnet",
                  "type": "process",
                  "args": [
                        "build",
                        "${workspaceFolder}/Ocelot.ApiGateway.Demo/Ocelot.ApiGateway.Demo.csproj",
                        "/property:GenerateFullPaths=true",
                        "/consoleloggerparameters:NoSummary"
                  ],
                  "problemMatcher": "$msCompile"
            },
            {
                  "label": "publish",
                  "command": "dotnet",
                  "type": "process",
                  "args": [
                        "publish",
                        "${workspaceFolder}/Ocelot.ApiGateway.Demo/Ocelot.ApiGateway.Demo.csproj",
                        "/property:GenerateFullPaths=true",
                        "/consoleloggerparameters:NoSummary"
                  ],
                  "problemMatcher": "$msCompile"
            },
            {
                  "label": "watch",
                  "command": "dotnet",
                  "type": "process",
                  "args": [
                        "watch",
                        "run",
                        "${workspaceFolder}/Ocelot.ApiGateway.Demo/Ocelot.ApiGateway.Demo.csproj",
                        "/property:GenerateFullPaths=true",
                        "/consoleloggerparameters:NoSummary"
                  ],
                  "problemMatcher": "$msCompile"
            }
      ]
}